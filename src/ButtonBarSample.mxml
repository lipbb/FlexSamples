<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import spark.events.IndexChangeEvent;
			
			protected function bar_changeHandler(event:IndexChangeEvent):void
			{
				label.text = "You clicked the button:" + (event.currentTarget as ButtonBar).selectedItem;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Panel width="100%" height="100%" title="button bar sample">
		<s:layout>
			<s:VerticalLayout/>
		</s:layout>
		<s:ButtonBar id="bar" change="bar_changeHandler(event)" requireSelection="false"
					 skinClass="org.lipbb.skins.CustomButtonBarSkin">
			<s:ArrayList>
				<fx:String>Home</fx:String>
				<fx:String>About</fx:String>
				<fx:String>Service</fx:String>
				<fx:String>Contact</fx:String>
			</s:ArrayList>
		</s:ButtonBar>
		
		<s:Label id="label"/>
	</s:Panel>
</s:Application>
